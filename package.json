{
  "name": "lsm-sports-theme",
  "version": "1.0.0",
  "description": "A modern WordPress theme built with TailwindCSS and PostCSS",
  "main": "index.js",
  "scripts": {
    "build": "npm run build:css",
    "build:css": "postcss src/css/style.css -o dist/css/style.css",
    "build:editor": "postcss src/css/editor-style.css -o dist/css/editor-style.css",
    "watch": "npm run watch:css",
    "watch:css": "postcss src/css/style.css -o dist/css/style.css --watch",
    "dev": "concurrently \"npm run watch:css\" \"npm run watch:editor\"",
    "watch:editor": "postcss src/css/editor-style.css -o dist/css/editor-style.css --watch",
    "build:all": "npm run build:css && npm run build:editor"
  },
  "keywords": [
    "wordpress",
    "theme",
    "tailwindcss",
    "postcss",
    "responsive"
  ],
  "author": "Your Name",
  "license": "GPL-2.0-or-later",
  "devDependencies": {
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "postcss": "^8.4.32",
    "postcss-cli": "^11.0.0",
    "tailwindcss": "^3.3.6"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
